%nav.bread-crumbs
  %ul
    %li
      = link_to items_path, itemprop: 'url', class: "parent" do
        %span{itemprop: :"title"} メルカリ
      %i.fas.fa-angle-right
    %li.item-name
      %span{itemprop: :"title"} うさぎ

.pay-error
  = h(flash[:notice])

.order-main-container
  .order-main-container__menu
    %span ただいま取引中です
    .order-menu__list
      状態は
      = @order.status_i18n
  .order-main-container__menu
    %span 商品名
    .order-menu__list
      = @order.item.name
  .order-main-container__menu
    %span 値段
    .order-menu__list
      = @order.item.price
  .order-main-container__menu
    %span 出品者
    .order-menu__list
      = @order.item.user.nickname
  .order-main-container__menu
    %span 購入者
    .order-menu__list
      = current_user.nickname

  .order-item__pay-btn
    .order-item__pay-btn__box
      .order-item__pay-btn__box-paypay
        = @paybtn

  .order-item__pay-btn
    = link_to item_order_path(params[:item_id],params[:id]), method: :patch, id: 'order-show-go', class: "order-item__pay-btn__box__do" do
      .order-item__pay-btn__box
        = @btn

  .order-item__pay-btn
    .order-item__pay-btn__message
      = @message

  .order-item__pay-btn
    = link_to item_order_path(params[:item_id],params[:id]), method: :delete, class: "order-item__pay-btn__box__do" do
      .order-item__pay-btn__box
        = @cancel_message

  = render 'pay'
